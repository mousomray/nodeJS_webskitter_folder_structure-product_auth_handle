<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../common/head.ejs') %>
  </head>

  <body>
    <div class="wrapper">
      <%- include('../common/sidebar.ejs') %>

      <div class="main">
        <%- include('../common/navbar.ejs') %>

        <!-- Flash Messages -->
        <% if (sucess && sucess != '') { %>
        <div
          class="alert alert-success"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= sucess %>
        </div>
        <% } else if (err && err != '') { %>
        <div
          class="alert alert-danger"
          role="alert"
          style="
            position: absolute;
            top: 50px;
            left: 50%;
            transform: translateX(-50%);
            width: 50%;
            text-align: center;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 10px;
            z-index: 1000;
          "
        >
          <%= err %>
        </div>
        <% } %>

        <!-- About Us Content -->
        <main
          class="content"
          style="padding: 20px; background-color: #f8f9fa; min-height: 100vh"
        >
          <div class="about-container">
            <h2 style="text-align: center; margin-bottom: 20px; color: #343a40">
              Banner
            </h2>
            <div
              style="
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100%;
              "
            >
              <a
                href="<%= generateUrl('addbanner')%>"
                style="
                  background-color: blue;
                  color: white;
                  padding: 8px 12px;
                  border-radius: 5px;
                  text-decoration: none;
                  margin-right: 5px;
                  margin-bottom: 30px;
                "
                >Add Banner</a
              >
            </div>

            <table
              class="table"
              style="
                width: 100%;
                border-collapse: collapse;
                font-family: Arial, sans-serif;
              "
            >
              <thead>
                <tr
                  style="
                    background-color: #007bff;
                    color: white;
                    text-align: left;
                  "
                >
                  <th scope="col">Title</th>
                  <th scope="col">Edit</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
              <tbody>
                <% banners.forEach((value) => { %>
                <tr>
                  <td><%= value.title %></td>
                  <td>
                    <!--Edit button-->
                    <a
                      href="<%= generateUrl('editbanner', { id: value._id }) %>"
                      style="
                        background-color: #28a745;
                        color: white;
                        padding: 8px 12px;
                        border-radius: 5px;
                        text-decoration: none;
                        margin-right: 5px;
                      "
                      >Edit</a
                    >
                  </td>
                  <td>
                    <!-- Delete button-->
                    <a
                      href="<%= generateUrl('deletebanner', { id: value._id }) %>"
                      style="
                        background-color: #dc3545;
                        color: white;
                        padding: 8px 12px;
                        border-radius: 5px;
                        text-decoration: none;
                      "
                      >Delete</a
                    >
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </main>

        <%- include('../common/footer.ejs') %>
      </div>
    </div>
  </body>
</html>
